{
  "name": "ujuz-hybrid-starter",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "concurrently -n API,ALERTS,AI -c auto \"npm:dev -w apps/api\" \"npm:dev -w apps/worker-alerts\" \"npm:dev -w apps/worker-ai\"",
    "build": "npm run build -ws",
    "db:generate": "npm run db:generate -w packages/db",
    "db:migrate": "npm run db:migrate -w packages/db",
    "seed": "npm run seed -w packages/db",
    "lint": "npm run lint -ws"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  }
}
