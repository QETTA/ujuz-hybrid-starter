{
  "cli": {
    "version": ">= 13.2.2",
    "appVersionSource": "remote",
    "promptToConfigurePushNotifications": false
  },
  "build": {
    "base": {
      "node": "22.12.0",
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=4096"
      },
      "channel": "base"
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug"
      },
      "ios": {
        "buildConfiguration": "Debug"
      },
      "env": {
        "APP_VARIANT": "development",
        "API_BASE_URL": "@API_BASE_URL_DEV",
        "KAKAO_JAVASCRIPT_KEY": "@KAKAO_JAVASCRIPT_KEY",
        "KAKAO_REST_API_KEY": "@KAKAO_REST_API_KEY",
        "KAKAO_MAP_APP_KEY": "@KAKAO_MAP_APP_KEY"
      },
      "channel": "development"
    },
    "preview": {
      "extends": "base",
      "distribution": "internal",
      "channel": "preview",
      "android": {
        "buildType": "apk",
        "image": "latest"
      },
      "ios": {
        "simulator": false,
        "image": "latest"
      },
      "env": {
        "APP_VARIANT": "preview",
        "API_BASE_URL": "@API_BASE_URL_STAGING",
        "ORG_GRADLE_PROJECT_newArchEnabled": "true",
        "KAKAO_JAVASCRIPT_KEY": "@KAKAO_JAVASCRIPT_KEY",
        "KAKAO_REST_API_KEY": "@KAKAO_REST_API_KEY",
        "KAKAO_MAP_APP_KEY": "@KAKAO_MAP_APP_KEY"
      }
    },
    "production": {
      "extends": "base",
      "distribution": "store",
      "channel": "production",
      "autoIncrement": true,
      "android": {
        "buildType": "app-bundle",
        "image": "latest",
        "gradleCommand": ":app:bundleRelease"
      },
      "ios": {
        "buildConfiguration": "Release",
        "image": "latest",
        "resourceClass": "m-medium"
      },
      "env": {
        "APP_VARIANT": "production",
        "API_BASE_URL": "https://api.ujuz.co.kr",
        "ORG_GRADLE_PROJECT_newArchEnabled": "true",
        "KAKAO_JAVASCRIPT_KEY": "@KAKAO_JAVASCRIPT_KEY",
        "KAKAO_REST_API_KEY": "@KAKAO_REST_API_KEY",
        "KAKAO_MAP_APP_KEY": "@KAKAO_MAP_APP_KEY"
      },
      "cache": {
        "key": "production-cache-v1",
        "paths": ["node_modules", ".expo"]
      }
    }
  }
}
